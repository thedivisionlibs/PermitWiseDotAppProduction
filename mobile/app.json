{
  "expo": {
    "name": "PermitWise",
    "slug": "PermitWise",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "PermitWise needs camera access to photograph permits, inspections, and business documents.",
        "NSPhotoLibraryUsageDescription": "PermitWise needs photo library access to upload permit documents and inspection photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "navigationBar": {
        "backgroundColor": "#000000",
        "barStyle": "light-content"
      },
      "package": "com.umbraglobal.permitwise",
      "permissions": [
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "02ac8422-7b84-428e-bafd-029ec87dfa5d"
      }
    },
    "plugins": [
      "react-native-iap",
      "expo-navigation-bar",
      [
        "expo-image-picker",
        {
          "cameraPermission": "PermitWise needs camera access to photograph permits, inspections, and business documents.",
          "photosPermission": "PermitWise needs photo library access to upload permit documents and inspection photos."
        }
      ],
      "expo-document-picker"
    ]
  }
}
