{
  "name": "permitwise",
  "version": "1.0.0",
  "description": "Permit management platform for mobile vendors",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "mobile": "cd mobile && npm start",
    "install:all": "npm install && cd client && npm install && cd ../mobile && npm install",
    "seed:jurisdictions": "node seeds/seed_jurisdictions.js",
    "seed:permits": "node seeds/seed_permit_library.js",
    "seed:checklists": "node seeds/seed_inspection_checklists.js",
    "seed:all": "npm run seed:jurisdictions && npm run seed:permits && npm run seed:checklists",
    "seed": "node -e \"require('./server.js')\" --seed"
  },
  "keywords": [
    "permits",
    "food-truck",
    "vendor",
    "compliance",
    "saas"
  ],
  "author": "PermitWise",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "stripe": "^14.10.0",
    "twilio": "^4.20.0",
    "@sendgrid/mail": "^8.1.4",
    "uuid": "^9.0.1",
    "helmet": "^8.0.0",
    "express-rate-limit": "^7.5.0",
    "googleapis": "^144.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
